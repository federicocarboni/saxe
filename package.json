{
  "name": "saxe",
  "version": "0.1.0",
  "description": "SAX style push streaming XML parser",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --outdir=lib/ --bundle --format=esm --target=es2017 --mangle-props=_\\$ --sourcemap",
    "fuzz": "jsfuzz fuzz/target.ts corpus -- --require tsm",
    "test": "c8 mocha test/*.test.ts",
    "format": "dprint fmt"
  },
  "keywords": [],
  "author": {
    "name": "Federico Carboni"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@gitlab-org/jsfuzz": "github:federicocarboni/jsfuzz#node-options",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "c8": "^9.1.0",
    "chai": "^5.1.0",
    "dprint": "^0.45.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "^10.4.0",
    "tsm": "^2.3.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  }
}
